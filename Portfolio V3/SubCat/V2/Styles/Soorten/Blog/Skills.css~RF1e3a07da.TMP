.eerste{
	margin-top: 100px;
}
section {
	color: #000;
	margin: 0 50px;
	padding: 12px;
	background-color: #ECEFF1;
}
img {
	background-size: cover;
	justify-content: center;
	margin-left: 500px;
	float: right;
}
@media screen and (max-width: 1080px) {
	.topnav a:not(:first-child) {display: none;}
	.topnav a.icon {
		float: right;
		display: block;
		transition: .3s;
  }
}

@media screen and (max-width: 1080px) {
	.topnav.responsive {position: relative;}
	.topnav.responsive .icon {
		position: absolute;
		right: 0;
		top: 0;
		transition: .3s;
  }
	.topnav a {
		padding: 15px 40px;
		transition: .3s;
	}
	.topnav.responsive a {
		float: none;
		display: block;
		text-align: left;
		transition: .3s;
  }
}
